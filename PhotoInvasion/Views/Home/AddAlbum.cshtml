@model PhotoInvasion.Models.AddAlbumModel

@{
    ViewBag.Title = "AddAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="addButton" href="@Url.Action("Albums", "Home")"><i class="fa fa-arrow-circle-o-left fa-2x"></i>&nbspBack to albums</a>
</div>

<div class="alignCenter">
    <h1>Add new album</h1>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>AddAlbumModel</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)<br />
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
